<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
    <title>Update &amp; Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    {{>navbar}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Industry</th>
                <th>Job Type</th>
                <th>Job Field</th>
                <th>Job Description</th>
                <th>Highest Qualification</th>
                <th>Salary</th>
                <th>Contact</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each list}}
            <tr>
                <td>{{this.industry}}</td>
                <td>{{this.jobtype}}</td>
                <td>{{this.jobfield}}</td>
                <td>{{this.jobdescrip}}</td>
                <td>{{this.highqualification}}</td>
                <td>{{this.salary}}</td>
                <td>{{this.jobcontact}}</td>
                <td>
                    <a href="/createjob/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>